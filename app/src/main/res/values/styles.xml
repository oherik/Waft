<resources>

    <!-- Base application theme. -->
      <style name="WaftMainTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>
        <item name="toolbarStyle">@style/Theme.AppCompat.Light</item>

        <!-- Material Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlHighlight">@color/control_highlight</item>


        <!-- Colors -->
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorControlHighlight">@color/control_highlight</item>
        <item name="android:colorAccent">@color/accent</item>
    </style>

    <!-- Flag sending sub-theme -->
    <style name="WaftFlagTheme" parent="WaftMainTheme">
        <item name="android:textColorPrimary">@color/black_87</item>
        <item name="android:textColorSecondary">@color/white</item>

        <item name="android:windowActionBar">true</item>

        <!-- Colors used in the comment field -->
        <item name="colorControlNormal">@color/accent</item>
        <item name="colorControlActivated">@color/accent</item>
    </style>

</resources>
